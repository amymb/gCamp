<div class = "page-header">
  <div class="pull-right"><%=link_to 'New Project', new_project_path, class: "btn btn-info"%></div>
  <h1>Projects</h1>
</div>

<table class="table">
  <thead>
    <tr>
        <th> Name</th>
        <th> Tasks</th>
    </tr>
  </thead>

  <%if current_user.admin == true%>
    <%@projects.each do |project|%>
      <tr>
        <div class=col-md-2>
          <td>
            <%=link_to project.name, project%>
          </td>
          <td>
            <%=link_to project.tasks.count, project_tasks_path(project)%>
          </td>
        </div>
      </tr>
    <%end%>
  </table>
  <%else current_user.admin == false %>
    <%current_user.projects.each do |project| %>
      <tr>
        <div class=col-md-2>
          <td>
            <%=link_to project.name, project%>
          </td>
          <td>
            <%=link_to project.tasks.count, project_tasks_path(project)%>
          </td>
        </div>
      </tr>
    <%end%>
  </table>
<%end%>

<%if @pivotal_projects%>
  <h1>Pivotal Tracker Projects</h1>

  <table class="table">
      <thead>
        <tr>
            <th> Name</th>
        </tr>
      </thead>
    <% @pivotal_projects.each do |project| %>
      <tr>
        <div class=col-md-2>
          <td>
            <%= link_to project[:name], pivotal_api_path(project[:id], project_name: project[:name]) %>
          </td>
        </div>
      </tr>
    <%end%>
  </table>
<%end%>
