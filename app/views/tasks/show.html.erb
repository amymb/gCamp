<div class = "page-header">
  <div class="pull-right"><%=link_to "Edit", edit_task_path, class:"btn btn-info"%></div>
  <h1>
    <%if @task.completed == true%>
      <s><%=@task.description%></s>
    <%else%>
        <%=@task.description%>
    <%end%>
  </h1>
</div>

<div>
  <ol class="breadcrumb">
    <li><%=link_to "Tasks", tasks_path%></li>
    <li class="active"><%=@task.description%></li>
  </ol>
</div>

<div class="container">
  <strong>Due On:</strong>
    <%if @task.due_date%>
      <%=@task.due_date.strftime("%m/%d/%Y")%>
    <%end%>
</div>
