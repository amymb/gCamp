<%=form_for @task, html:{class:"form-horizontal"} do |task|%>
<div class="form-group">
  <%=task.label :description, class:"col-md-2 control-label"%>
  <%=task.text_field :description, class:"col-md-4"%>
</div>

<div class="form-group">
  <%=task.submit name_of_button, class: "btn btn-primary col-md-offset-2" %> <%=link_to "Cancel", tasks_path, class:"btn btn-default"%>
</div>

<%end%>
