<%=form_for @task, html:{class:"form-horizontal"} do |task|%>

  <div class="form-group">
    <%=task.label :description, class:"col-md-2 control-label"%>
    <div class ="col-md-5">
      <%=task.text_field :description, class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-md-5">
       <input type="checkbox">
       <%=task.label :completed%>
   </div>
 </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-5">
      <%=task.submit name_of_button, class: "btn btn-primary" %> <%=link_to "Cancel", tasks_path, class:"btn btn-default"%>
    </div>
  </div>

<%end%>
