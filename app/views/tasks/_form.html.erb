





<%=form_for @task, html:{class:"form-horizontal"} do |task|%>
<% if @task.errors.any? %>
  <div class = "form-group">
    <div class = "col-md-6 col-md-offset-2">
    <div class="alert alert-danger",  role ="alert">
      <h3><%=pluralize(@task.errors.count, "error")%>
          prohibited this form from being saved:</h3>
          <ul>
            <%@task.errors.full_messages.each do |msg|%>
            <li><%=msg%></li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>
    <%end%>

  <div class="form-group">
    <%=task.label :description, class:"col-md-2 control-label"%>
    <div class ="col-md-5">
      <%=task.text_field :description, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=task.label :due_date, class:"col-md-2 control-label"%>
    <div class ="col-md-3">
      <%=task.date_field :due_date, class:"form-control"%>
    </div>
  </div>

  <% unless @task.new_record? %>
    <div class="form-group">
     <div class="col-sm-offset-2 col-md-5">
       <%=task.check_box :completed%>
       <%=task.label "Complete"%>
     </div>
   </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-5">
      <%=task.submit name_of_button, class: "btn btn-primary" %> <%=link_to "Cancel", tasks_path, class:"btn btn-default"%>
    </div>
  </div>

<%end%>
