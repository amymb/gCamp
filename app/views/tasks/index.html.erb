<div class = "container">
  <div class = "page-header">
<h1>Listing Tasks</h1>
</div>
<h4> Description </h4>
  <% @tasks.each do |task| %>
  <p><td> <%=task.description %> </td>
  <td> <%=link_to 'Show', task %></td>
  <td><%=link_to 'Edit', edit_task_path(task) %></td>
  <td><%=link_to 'Destroy', task, method: :delete %></td></p>
<%end%>

<p><%=link_to 'New Task', new_task_path%></p>
</div>
