<div class = "page-header">
  <h1>Edit Task</h1>
</div>

<div>
  <ol class="breadcrumb">
    <li><%=link_to "Tasks", tasks_path%></li>
    <li class="active"><%=@task.description%></li>
  </ol>
</div>

<br>
<%=form_for @task, html:{class:"form-horizontal"} do |task|%>
<div class="form-group">
  <%=task.label :description, class:"col-md-2 control-label"%>
  <%=task.text_field :description, class:"col-md-4"%>
</div>

<div class="form-group">
  <%=task.submit "Update Task", class: "btn btn-primary col-md-offset-2" %> <%=link_to "Cancel", tasks_path, class:"btn btn-default"%>
</div>

<%end%>
