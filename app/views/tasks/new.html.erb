<div class = "container">
  <div class = "page-header">
    <h1>New task</h1>
  </div>
  <div>
    <%=link_to "Tasks", tasks_path%> > New Task
  </div>
  <br>
  <%=form_for Task.new, html:{class:"form-horizontal"} do |task|%>
  <div class="form-group">
    <%=task.label :description, class:"col-md-2 control-label"%>
    <%=task.text_field :description, class:"col-md-4"%>
  </div>
  <div class="form-group">
    <%=task.submit "Create Task", class: "btn btn-primary col-md-offset-2" %> <%=link_to "Cancel", tasks_path, class:"btn btn-default"%>
  </div>
  <%end%>
</div>
