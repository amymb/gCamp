<div class = "page-header">
  <div class="pull-right"><%=link_to 'New User', new_user_path, class: "btn btn-info"%></div>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <tr>
        <th> Name</th>
        <th> Email</th>
        <th> </th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <div class=col-md-2>
        <td>
          <%=link_to user.first_name + ' ' + user.last_name, user%>
        </td>
      </div>
      <div class=col-md-2>
        <td>
          <%if user == current_user || current_user.admin == true || ((user.projects & current_user.projects).any?)%>
            <%=mail_to user.email%>
          <%end%>
        </td>
      </div>
      <td>
        <div class="text-right">
          <%if user == current_user || current_user.admin == true%>
            <%=link_to "edit", edit_user_path(user)%>
          <%end%>
        </div>
      </td>
    </tr>
  <%end%>
</table>
