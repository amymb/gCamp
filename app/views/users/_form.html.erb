<%=form_for @user, html:{class:"form-horizontal"} do |user|%>
<%=render partial: "shared/errors", locals:{object: @user}%>
  <div class="form-group">
    <%=user.label :first_name, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
      <%=user.text_field :first_name, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=user.label :last_name, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
      <%=user.text_field :last_name, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=user.label :email, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
      <%=user.email_field :email, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=user.label :password, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
      <%=user.password_field :password, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=user.label :password_confirmation, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
      <%=user.password_field :password_confirmation, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%=user.label :tracker_token, class:"col-md-2 control-label"%>
    <div class ="col-md-4">
    <%=user.text_field :tracker_token, class:"form-control"%>
    </div>
  </div>

  <%if current_user.admin == true%>
    <div class="form-group">
     <div class="col-sm-offset-2 col-md-5">
       <%=user.check_box :admin%>
       <%=user.label "Admin"%>
     </div>
   </div>
  <%end %>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-5">
      <%=user.submit name_of_button, class: "btn btn-primary" %> <%=link_to "cancel", users_path, class:"btn btn-default"%>
    </div>
  </div>
<% end %>
