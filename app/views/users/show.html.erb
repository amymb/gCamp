<div class = "page-header">
  <%if @user.id == current_user.id || current_user.admin == true%>
    <div class="pull-right"><%=link_to 'Edit', edit_user_path, class: "btn btn-info"%></div>
  <%end%>
  <h1>
    <%=@user.first_name + ' '+ @user.last_name%>
  </h1>
</div>

<div class="dl-horizontal">
  <dt>First name </dt>
  <dd><%=@user.first_name%></dd>
  <dt>Last name </dt>
  <dd><%=@user.last_name%></dd>
  <%if @user == current_user || (@user.projects & current_user.projects).any? || current_user.admin == true %>
    <dt>Email</dt>
    <dd><%=mail_to @user.email%></dd>
  <%end%>
</div>
